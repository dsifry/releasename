<h1>New word</h1>

<% parts_of_speech = SpeechType.find(:all, :order => :name) %>
<% form_for(@word) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    Type of Speech: <br />
    <%= f.collection_select :speech_type, parts_of_speech, :id, :name %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', words_path %>